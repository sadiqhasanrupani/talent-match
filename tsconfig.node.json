{
"compilerOptions": {
    "target": "ES2018",
    "module": "CommonJS",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "baseUrl": ".",
    "paths": {
    "@/*": ["./*"]
    },
    "outDir": "dist",
    "sourceMap": true
},
"include": ["**/*.ts"],
"exclude": ["node_modules"]
}

